{% extends 'base.html.twig' %}

{% block title %}Liste des recettes
{% endblock %}
{% block body %}
	<h1>Liste des recettes</h1>
	<ul>

		{# {{ dump(app.current_route) }} #}
		{% for recipe in recipes %}

			<li>
				<a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug }) }}">{{ recipe.title }}</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
