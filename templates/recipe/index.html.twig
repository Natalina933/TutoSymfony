{% extends 'base.html.twig' %}

{% block title %}Liste des recettes
{% endblock %}

{% block body %}
	<h1>Liste des recettes</h1>

	{% if recipes is empty %}
		<p>Aucune recette n'a été trouvée.</p>
	{% else %}
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Titre</th>
					<th>Durée</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for recipe in recipes %}
					<tr>
						<td>
							<a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug }) }}">{{ recipe.title }}</a>
						</td>
						<td>{{ recipe.duration }}
							minutes</td>
						<td>
							<a href="{{ path('recipe.edit', {id: recipe.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
							<a href="{{ path('recipe.delete', {id: recipe.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette recette ?');">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endif %}

	<a href="{{ path('recipe.add') }}" class="btn btn-success">Ajouter une nouvelle recette</a>
{% endblock %}
